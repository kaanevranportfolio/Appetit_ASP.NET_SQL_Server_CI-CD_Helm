# Example .env file for Appetit ASP.NET SQL Server
# Copy this file to .env and fill in your own values

# Database
DB_PASSWORD=YourStrong!Passw0rd
DB_NAME=AppetitDb
DB_USER=sa
DB_HOST=sqlserver
DB_PORT=1433

# JWT Settings (for ASP.NET Core nested config)
JwtSettings__SecretKey=YourSuperSecretKeyThatIsAtLeast32CharactersLongForSecurity
JwtSettings__Issuer=RestaurantMenuAPI
JwtSettings__Audience=RestaurantMenuAPIUsers
JwtSettings__ExpiryMinutes=60

# Alternative JWT Settings (for direct environment variable access)
JWT_SECRET_KEY=YourSuperSecretKeyThatIsAtLeast32CharactersLongForSecurity
JWT_ISSUER=RestaurantMenuAPI
JWT_AUDIENCE=RestaurantMenuAPIUsers
JWT_TOKEN_VALIDITY_MINUTES=60

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
